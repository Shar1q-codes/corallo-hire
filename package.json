{
  "name": "corallo-hire",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "infra:up": "docker compose -f infra/docker/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker/docker-compose.yml down",
    "db:migrate": "pnpm -C packages/db prisma migrate deploy",
    "db:generate": "pnpm -C packages/db prisma generate",
    "db:seed": "pnpm -C packages/db prisma db seed",
    "db:studio": "pnpm -C packages/db prisma studio",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "build": "turbo build",
    "dev": "pnpm infra:up && turbo dev --parallel"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  }
}
